{
    "name": "Wikit",
    "version": "1.0",
    "description": "Search Wikipedia",
    "manifest_version": 2,
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "background": {
        "scripts": [
            "eventPage.js"
        ],
        "persistent": false
    },
    "permissions": [
        "tabs",
        "contextMenus"
    ]
}